<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Title Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4sp"
        android:paddingRight="4sp"
        android:paddingTop="4sp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:hint="@string/title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:inputType="text" />
    </LinearLayout>

    <!--Note Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4sp"
        android:paddingRight="4sp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/note"
            android:hint="@string/note"
            android:textSize="12sp"
            android:textStyle="normal"
            android:inputType="text" />
    </LinearLayout>

    <!--Tag Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4sp"
        android:paddingRight="4sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tags"
            android:text="@string/no_tags"
            android:textSize="14sp"
            android:textStyle="italic"
            android:padding="4sp"/>
    </LinearLayout>

    <!--List View-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4sp"
            android:paddingRight="4sp"
            android:id="@+id/tasks"/>

        <LinearLayout
            android:id="@+id/folder_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/background_dark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/folder_bottom_bar_search"
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="4sp"
                android:contentDescription="Search"
                android:src="@android:drawable/ic_menu_search" />

            <!--ImageView
                android:id="@+id/home_bottom_bar_more"
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="4sp"
                android:contentDescription="More"
                android:src="@android:drawable/ic_menu_more" /-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/folder_bottom_bar_search_text"
                android:hint="@string/search"
                android:visibility="invisible"/>
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@android:drawable/ic_menu_add"
            android:id="@+id/folder_fab">

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_dialog_dialer"
                android:id="@+id/folder_add_folder"/>

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_agenda"
                android:id="@+id/folder_add_task"/>
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>
</LinearLayout>